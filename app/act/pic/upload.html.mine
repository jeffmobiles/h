    //更换验证码
    $(".code_img").bind("click",function(e){
        var src = $(this).attr("src");
        $(this).attr("src",src+"&id="+genRandom(1000,100000));
    })
    function genRandom(min,max){
        var range = max - min;
        var random = Math.random();
        return min +　Math.round(random * range);
    }
    function check(phone,code,img,name){
        var reg = "[`~\\\\!@#\$%\^&\*\(\)_\+<>\?:\"{},\.\/;'\[\\]]";
        var msg = "";

        if($.trim(phone)== ""){
            msg += '手机号不能为空</br>';
        } else if(!(phone.match(/1[34578]\d{9}(?=,|$)/g))){
                msg += '请输入正确的11位手机号</br>';
        }

        if (isIOS) {
            if($.trim(img) =="" || $.trim(img) =="./img/up_img.png"){
                msg +="图片不能为空</br>";
            }

        }
        if($.trim(name) =="") {
            msg += "名字不能为空</br>";
        }
        if($.trim(code)== ""){
            msg += '验证码不能为空</br>';
        }

        if(msg.length > 0) {
            showTip(msg,2000);
            return false;
        } else {
            return true;
        }

    }
    $("#share_img").on("click",function(e){
